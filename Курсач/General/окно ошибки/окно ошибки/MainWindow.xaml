<Window x:Class="окно_ошибки.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:окно_ошибки"
        mc:Ignorable="d"
        Title="Ошибка" Height="300" Width="500" Background="#FF83FFFF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Ошибка ввода" FontSize="14" HorizontalAlignment="Center" Margin="195,55,194.6,0.4"/>
        </Grid>

        <Grid Grid.Row="1">
            <Label Content="Информация об ошибке" FontSize="14" HorizontalAlignment="Center" Margin="163,28,154.6,20.4"/>
        </Grid>

        <Grid Grid.Row="2">
            <Button Content="OK" Margin="176,24,175.6,31.6" Background="#FF00BDBA"/>
        </Grid>
    </Grid>
</Window>
